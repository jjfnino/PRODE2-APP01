	padding: 8px;
	border: 1px solid #A10A0A;
	border-radius: 4px;
	background-color: #E80C0C;
	box-shadow: 2px 2px 2px #888888;
	width: 250px;
	font-size: 14px;
	cursor: pointer;
}

hr {
	border-top: solid 1px #eeeeee;
	border-bottom: 0;
}

.group_subhead {
	padding: 8px;
	font-style: italic;
	color: #c3c3c3;
}

input {
	border: 0px;
}

.input input {
