	float: right;
	border-radius: 8px;
}

.datetime {
	color: #FF3053;
}

#grupos { /*overflow-x: scroll;
	overflow-y: hidden;
	height: 320px;*/
	margin-top: 70px;
}

.lv_grupos {
	border-left: 1px dashed #c3c3c3;
}

.asterisc {
	color: red;
	font-size: 15px;
